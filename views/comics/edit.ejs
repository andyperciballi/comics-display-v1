<!DOCTYPE html>
<html lang="en">
  <head>
    <link
      href="https://fonts.googleapis.com/css2?family=Nunito:wght@200;400;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Comic</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>

    <main class="form-container">
      <h1 class="form-title">Edit Comic</h1>

      <form action="/users/<%= user._id %>/comics/<%= comic._id %>?_method=PUT" method="POST" class="comic-form">
        
        <!-- Title (Required) -->
        <div class="form-group">
          <label for="title" class="form-label">
            <strong>Comic Title:</strong> *
          </label>
          <input type="text" name="title" id="title" class="form-input" value="<%= comic.title %>" required />
        </div>

        <!-- Author -->
        <div class="form-group">
          <label for="author" class="form-label">
            <strong>Author:</strong>
          </label>
          <input type="text" name="author" id="author" class="form-input" value="<%= comic.author || '' %>" />
        </div>

        <!-- Issue Number -->
        <div class="form-group">
          <label for="issueNumber" class="form-label">
            <strong>Issue Number:</strong> (e.g., #1, Annual 2023)
          </label>
          <input type="text" name="issueNumber" id="issueNumber" class="form-input" value="<%= comic.issueNumber || '' %>" />
        </div>

        <!-- Image URL -->
        <div class="form-group">
          <label for="imageUrl" class="form-label">
            <strong>Cover Image URL:</strong> (https://example.com/image.jpg)
          </label>
          <input type="url" name="imageUrl" id="imageUrl" class="form-input" value="<%= comic.imageUrl || '' %>" />
        </div>

        <!-- Condition -->
        <div class="form-group">
          <label for="condition" class="form-label">
            <strong>Condition:</strong>
          </label>
          <select name="condition" id="condition" class="form-select">
            <option value="Poor" <%= comic.condition === 'Poor' ? 'selected' : '' %>>Poor</option>
            <option value="Fair" <%= comic.condition === 'Fair' ? 'selected' : '' %>>Fair</option>
            <option value="Good" <%= comic.condition === 'Good' ? 'selected' : '' %>>Good</option>
            <option value="Very Good" <%= comic.condition === 'Very Good' ? 'selected' : '' %>>Very Good</option>
            <option value="Fine" <%= comic.condition === 'Fine' ? 'selected' : '' %>>Fine</option>
            <option value="Very Fine" <%= comic.condition === 'Very Fine' ? 'selected' : '' %>>Very Fine</option>
            <option value="Near Mint" <%= comic.condition === 'Near Mint' ? 'selected' : '' %>>Near Mint</option>
            <option value="Mint" <%= comic.condition === 'Mint' ? 'selected' : '' %>>Mint</option>
          </select>
        </div>

        <!-- Estimated Value -->
        <div class="form-group">
          <label for="estimatedValue" class="form-label">
            <strong>Estimated Value:</strong> (in dollars)
          </label>
          <input type="number" name="estimatedValue" id="estimatedValue" class="form-input" min="0" step="0.01" value="<%= comic.estimatedValue || '' %>" />
        </div>

        <!-- Notes -->
        <div class="form-group">
          <label for="notes" class="form-label">
            <strong>Notes:</strong> (any additional details about this comic)
          </label>
          <textarea name="notes" id="notes" class="form-textarea" rows="4"><%= comic.notes || '' %></textarea>
        </div>

        <!-- Buttons -->
        <div class="form-buttons">
          <button type="submit" class="submit-button">Update Comic</button>
          <a href="/users/<%= user._id %>/comics" class="cancel-link">Cancel</a>
        </div>

      </form>
    </main>
  </body>
</html>